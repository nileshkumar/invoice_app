<p style="color: green"><%= notice %></p>

<div id="invoices">
  <table class="table table-hover">
    <thead>
      <tr>
      <th scope="col">#</th>
        <th scope="col">Amount</th>
        <th scope="col">Due Date</th>
        <th scope="col">Selling Price</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
    <tr>
      <th scope="row"><%= @invoice.id %></th>
      <td> <%= @invoice.amount %></td>
      <td><%= @invoice.due_date %></td>
      <td><%= @invoice.selling_price %></td>
      <td><%= link_to "Edit this invoice", edit_invoice_path(@invoice), class:"btn btn-outline-primary" %>
      <%= button_to "Destroy this invoice", @invoice, method: :delete, class:"btn btn-outline-danger" %></td>
    </tr>
    </tbody>
  </table>
</div>

<div>
  <%= link_to "Back to invoices", invoices_path %>
</div>
